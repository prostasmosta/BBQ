<div class="col">
  <div class="card border-success border-2 mb-3 mt-5" style="max-width: 18rem;">
    <div class="card-header"><%= link_to event.title, event_path(event) %></div>
    <div class="card-body">
      <p class="card-text"><%= event.description %></p>
      <p class="card-text"><%= event.datetime %></p>
      <p class="card-text"><%= event.address %></p>
    </div>
  </div>
</div>
