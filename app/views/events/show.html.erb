<div class="container my-3">
  <h1><%= @event.title %></h1>
  <h4><%= l @event.datetime, format: :short %></h4>
  <h3><small><%= link_to @event.address,
                         "https://yandex.ru/maps/?text=#{@event.address}",
                         class: '' %></small></h3>
  <p class="mt-3"><%= @event.description %></p>

  <% if current_user_can_edit?(@event) %>
    <div class="mt-4">
      <%= link_to I18n.t('edit'), edit_event_path(@event),
                  class: 'btn btn-success' %> или <%= link_to I18n.t('back'), :back %>
    </div>

    <div class="mt-4">
      <%= button_to I18n.t('delete_event'), event_path(@event),
                    method: :delete,
                    form: { data: { turbo_confirm: I18n.t('confirm_event') } },
                    class: 'btn btn-danger' %>
    </div>
    <% end %>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="mt-3">
      <%= render partial: 'comments/form',
                 locals: {comment: @new_comment || @event.comments.build} %>

      <div class="my-3">
        <%= render partial: 'comments/comment',
                   collection: @event.comments.except(@new_comment) %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="">
      <h4>Зовет:</h4>
      <p><%= render partial: 'users/user', object: @event.user %></p>
    </div>
    <div class="">
      <h4>Пойдут:</h4>
      <div>
        <p>
          <%= render partial: 'subscriptions/subscription',
                     collection: @event.subscriptions.except(@new_subscription) %>
        </p>
      </div>
    </div>
    <div class="">
      <h4>Я пойду:</h4>
      <div>
        <%= render partial: 'subscriptions/form', locals: {
          subscription: @new_subscription || @event.subscriptions.build
        } %>
      </div>
    </div>
  </div>
</div>
