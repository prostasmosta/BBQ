<%= form_for [@event, comment], data: { turbo: false } do |f| %>
    <%= render partial: 'partials/form_errors', locals: {model: comment} %>

    <div class="mt-3">
      <%= f.text_area :body, placeholder:"Комментарий", class: 'form-control' %>
    </div>

    <% unless user_signed_in? %>
        <div class="mt-3">
          <%= f.text_field :user_name, placeholder:"Имя", class: 'form-control' %>
        </div>
    <% end %>

    <div class="mt-3">
      <%= f.submit 'Отправить', class: 'btn btn-success' %>
    </div>
<% end %>
