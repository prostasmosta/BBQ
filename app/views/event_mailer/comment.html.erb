<h1><%= t '.title' %></h1>
<p><%= @comment.body %></p>
<p><%= t '.author' %>: <strong><%= @comment.user_name %></strong></p>

<hr/>

<%= t '.event' %>
<h3><%= link_to @comment.event.title, event_url(@comment.event) %></h3>

<%= t '.datetime' %>
