<div class="text-center">
  <h1><%= @user.name %></h1>
    <%= image_tag user_avatar(@user), style: 'width: 25%', class: 'rounded-circle' %>

  <% if @user == current_user %>
    <p class="mt-3">
      <%= link_to t('users.edit_profile'), edit_user_path(@user),
                  class: 'btn btn-success' %></p>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3 class="text-center mt-3"><%= t('users.owner') %></h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p class="mt-3 text-center"><%= t('users.no_event') %></p>
    <% end %>
  </div>
</div>
