<h2 class="my-3 px-2">Вход</h2>
<div class="row">
  <div class="col-md-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>

      <div class="field mb-3 d-flex flex-row align-items-center justify-content-start">
        <div class="flex-fill px-2">
          <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email",
                            placeholder: "Email" %>
        </div>
        <div class="">
          <%= bi_icon('envelope') %>
        </div>
      </div>


      <div class="field mb-3 d-flex flex-row align-items-center justify-content-start">
        <div class="flex-fill px-2">
          <%= f.password_field :password, class: 'form-control', autocomplete: "current-password",
                               placeholder: "Пароль" %>
        </div>
        <div class="">
          <%= bi_icon('key') %>
        </div>
      </div>


      <% if devise_mapping.rememberable? %>
        <div class="field mb-3 px-2">
          <%= f.check_box :remember_me %>
          <%= f.label 'Запомнить меня' %>
        </div>
      <% end %>

      <div class="mt-4 px-2">
        <button type="submit" class="btn btn-success mb-3">Войти</button>
      </div>
    <% end %>

    <div class="px-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
