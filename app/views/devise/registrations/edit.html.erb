<h2 class="my-3 px-2"><%= t('devise.password_edit') %></h2>
<div class="row">
  <div class="col-md-8">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false },
                 html: { method: :put }) do |f| %>
      <div class="px-2">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>
      <div class="field mb-3 d-flex flex-row align-items-center justify-content-start">
        <div class="flex-fill px-2">
          <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email",
                            placeholder: true %>
        </div>
        <div class="">
          <%= bi_icon('envelope') %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('devise.conf_wait') %> <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field mb-3 d-flex flex-row align-items-center justify-content-start">
        <div class="flex-fill px-2">
          <i><%= t('devise.password_old') %></i>
          <%= f.password_field :password, class: 'form-control', autocomplete: "new-password",
                               placeholder: t('devise.password_lenght', pw: @minimum_password_length) %>
        </div>
        <div class="">
          <%= bi_icon('key') %>
        </div>
      </div>

      <div class="field mb-3 d-flex flex-row align-items-center justify-content-start">
        <div class="flex-fill px-2">
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password",
                               placeholder: t('devise.password_confirmation')%>
        </div>
        <div class="">
          <%= bi_icon('key-fill') %>
        </div>
      </div>

      <div class="field mb-3 d-flex flex-row align-items-center justify-content-start">
        <div class="flex-fill px-2">
          <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password",
                               placeholder: t('devise.current_password') %>
        </div>
        <div class="">
          <%= bi_icon('key') %>
        </div>
      </div>

      <div class="mt-4 px-2">
        <button type="submit" class="btn btn-success mb-3"><%= t('devise.update') %></button>
      </div>
    <% end %>

    <h4 class="mt-3 px-2"><%= t('devise.delete_profile') %></h4>

    <div class="my-3 px-2"><%= button_to t('devise.delete'), registration_path(resource_name),
                                         form: { data: { turbo_confirm: t('devise.confirm_user') } },
                                         method: :delete, class: "btn btn-success" %></div>

    <div class="px-2">
      <%= link_to t('devise.back'), :back %>
    </div>
  </div>
</div>
