<%= form_for [@event, subscription], data: { turbo: false } do |f| %>
  <%= render partial: 'partials/form_errors', locals: { errors: subscription.errors } %>

  <% unless user_signed_in? %>
    <div class="mt-3">
      <%= f.text_field :user_name, placeholder: true, class: 'form-control' %>
    </div>

    <div class="mt-3">
      <%= f.text_field :user_email, placeholder: true, class: 'form-control' %>
    </div>
  <% end %>

  <div class="my-3">
    <%= f.submit t('.subscribe'), class: 'btn btn-success' %>
  </div>
<% end %>
