<%= form_for [@event, subscription], data: { turbo: false } do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: subscription } %>

  <% unless user_signed_in? %>
    <div class="mt-3">
      <%= f.text_field :user_name, placeholder:"Имя", class: 'form-control' %>
    </div>

    <div class="mt-3">
      <%= f.text_field :user_email, placeholder:"Email", class: 'form-control' %>
    </div>
  <% end %>

  <% unless current_user == @event.user %>
    <div class="mt-3">
      <%= f.submit 'Подписаться', class: 'btn btn-success' %>
    </div>
  <% end %>
<% end %>
