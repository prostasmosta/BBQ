<table class="table table-hover table-sm">
  <table class="table align-middle">
    <tbody>
    <tr>
      <% if subscription.user.present? %>
        <td><%= render partial: 'users/user', object: subscription.user %></td>
      <% else %>
        <td><%= subscription.user_name %></td>
      <% end %>
      <td>
      <% if current_user_can_edit?(subscription) %>
        <%= button_to 'Удалить', event_subscription_path(subscription.event, subscription), method: :delete,
                      form: { data: { turbo_confirm: t('.destroy_confirm') } },
                      class: 'btn btn-danger'%>
      <% end %>
      </td>
    </tr>
    </tbody>
  </table>
</table>
